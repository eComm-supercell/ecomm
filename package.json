{
  "name": "platform",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev:authentication": "NODE_ENV=development nest start authentication --watch",
    "start:dev:platform": "NODE_ENV=development nest start platform --watch",
    "start:dev:shops": "NODE_ENV=development nest start shops --watch",
    "start:dev:admins": "NODE_ENV=development nest start admins --watch",
    "start:dev:assets": "NODE_ENV=development nest start assets --watch",
    "start:dev:default": "NODE_ENV=development nest start --watch",
    "start:debug": "NODE_ENV=development nest start --debug --watch",
    "start:prod:platform": "NODE_ENV=production node dist/apps/platform/main",
    "start:prod:shops": "NODE_ENV=production node dist/apps/shops/main",
    "start:prod:admins": "NODE_ENV=production node dist/apps/admins/main",
    "start:prod:auth": "NODE_ENV=production node dist/apps/authentication/main",
    "start:prod:assets": "NODE_ENV=production node dist/apps/assets/main",
    "start:c": "nest start shops",
    "start:c:dev": "NODE_ENV=development nest start shops --watch",
    "start:c:debug": "NODE_ENV=development nest start shops --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "pretest": "sh scripts/restart-test-db.sh && sleep 1 && sh scripts/migrate-test-db.sh",
    "test": "dotenv -e .env.test -- jest -i --no-cache -c jest.config.json",
    "pretest:watch": "yarn pretest",
    "test:watch": "dotenv -e .env.test -- jest -i --watch -c jest.config.json",
    "test:cov": "dotenv -e .env.test -- jest -i --coverage -c jest.config.json",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "pretest:e2e": "yarn pretest",
    "test:e2e": "dotenv -e .env.apps/platform/test -- jest -i --no-cache -c ./test/jest-e2e.json",
    "db:seed": "npx prisma db seed",
    "deploy": "npx prisma migrate deploy && npx prisma db seed  && npm run start:prod"
  },
  "dependencies": {
    "@casl/ability": "^6.5.0",
    "@faker-js/faker": "^8.3.1",
    "@nestjs/bullmq": "^10.0.1",
    "@nestjs/common": "^10.0.5",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.5",
    "@nestjs/devtools-integration": "^0.1.5",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/microservices": "^10.2.5",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.5",
    "@nestjs/swagger": "^7.1.1",
    "@prisma/client": "^5.7.0",
    "@types/lodash": "^4.14.202",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/passport-local": "^1.0.35",
    "argon2": "^0.30.3",
    "bullmq": "^4.3.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "firebase": "^10.2.0",
    "firebase-admin": "^11.10.1",
    "k6": "^0.0.0",
    "lodash": "^4.17.21",
    "lodash.combinations": "^18.11.1",
    "meilisearch": "^0.33.0",
    "minio": "^7.1.3",
    "multer": "1.4.5-lts.1",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sharp": "^0.32.3",
    "ts-node": "^10.9.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "10.1.8",
    "@nestjs/schematics": "10.0.1",
    "@nestjs/testing": "10.0.5",
    "@types/express": "^4.17.17",
    "@types/jest": "29.5.3",
    "@types/k6": "^0.45.0",
    "@types/multer": "^1.4.7",
    "@types/node": "20.4.2",
    "@types/passport-jwt": "^3.0.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "29.6.1",
    "prettier": "^3.0.0",
    "prisma": "^5.7.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.4.4",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.1.6"
  },
  "prisma": {
    "seed": "ts-node libs/common/src/scripts/seed.ts --transpile-only"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/libs/",
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "^libs/common/common(|/.*)$": "<rootDir>/libs/common/src/$1"
    }
  }
}
